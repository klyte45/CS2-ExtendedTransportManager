{
  "extends": "ts-config-single-spa",  
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-jsx",
    "declarationDir": "dist",
    "paths": {
      "#components/*": [
        "src/components/*"
      ],
      "#enum/*": [
        "src/enum/*"
      ],
      "#service/*": [
        "src/service/*"
      ],
      "#utility/*": [
        "src/utility/*"
      ],
      "#styles/*": [
        "src/styles/*"
      ],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test*"] 
}
